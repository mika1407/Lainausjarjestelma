@model LainausjarjestelmaMVC.Models.Lainaajat

@{
    ViewBag.Title = "Lisää uusi - Käyttäjä";
}

<br />

<h2>Lisää uusi</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
