@using System.Globalization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tuotteiden lainausjärjestelmä</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    @*//Navigointipalkki ja kirjautumisen tunnistuksen näyttö palkissa*@

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="~/Home">Lainausjärjestelmä (@ViewBag.LoggedStatus)</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">

                    @*//Pudotusvalikot ja muut linkit palkissa*@

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Kirjautuminen</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Home/Login">Kirjaudu sisään</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Home/Logout">Kirjaudu ulos</a>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Lainaaminen</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Tuotteet/Kuvat">Selaa tuotteita</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Lainaukset/Create">Lainaa</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Lainaukset">Palauta</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Lainaukset">Lainaukset</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/About">Tietoa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Contact">Yhteystiedot</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Ylläpito</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Logins">Loginit</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Lainaajat">Käyttäjät</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Tuotteet">Tuotteet</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Varastot">Varastopaikat</a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    @*//Alatunniste päivämäärän- ja ajannäytöllä*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year | Tuotteiden lainausjärjestelmä | Designed by Mika Hämäläinen, Mattias Boström & Mika Tiihonen</p>
            <p><i>Nyt on @DateTime.Now.ToString(new CultureInfo("fi-FI"))</i></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>