
@{
    ViewBag.Title = "Lainaa";


}
<br />
@*<h2>Lainaa</h2>*@

<div class="row">
    @using (Html.BeginForm("Save", "Lainat", FormMethod.Post, new { id = "popupForm" }))
    {

        <div>
            <h1>Lainaa</h1>
        </div>

        <div class="form-group">
            <label class="form-label">Tuote</label>
            <select class="form-control" id="Nimi" name="Nimi" placeholder="Tuote" required>
                <option>Valitse</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Lainaaja</label>
            <input type="text" id="lainaajaid" name="lainaajaid" class="form-control" placeholder="Lainaaja ID" required>
        </div>

        <div class="form-group">
            <label class="form-label">Lainaajan nimi</label>
            <input type="text" id="lainaajaid" name="Sukunimi" class="form-control" placeholder="Lainaaja" required>
        </div>

        <div class="form-group">
            <label class="form-label">Lainauspäivä</label>
            <input type="date" id="lainapvm" name="lainapvm" class="form-control" placeholder="Lainauspäivä" required>
        </div>

        <div class="form-group">
            <label class="form-label">Palautuspäivä</label>
            <input type="date" id="palautuspvm" name="palautuspvm" class="form-control" placeholder="Palautuspäivä" required>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Lainaa" class="btn btn-success" />
        </div>

    }

</div>

@section scripts
{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script>
        haeTuote();

        function haeTuote()
        {
            $.ajax({

                type: 'GET',
                url: 'Lainat/HaeTuote',
                dataType: 'JSON',
                success: function(data)
                {

                    console.log(data);

                    for(var i = 0; i<data.lenght; i++)
                    {
                        $("#Nimi").append($("<option/>", {
                            text: data[i].Nimi
                        }));
                    }
                }
            });
        }
    </script>
}