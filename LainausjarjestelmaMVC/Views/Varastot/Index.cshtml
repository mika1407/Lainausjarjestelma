@model IEnumerable<LainausjarjestelmaMVC.Models.Varastot>

@{
    ViewBag.Title = "Varastopaikat";
}

<br />

<h2>Varastopaikat</h2>

<p>
    @Html.ActionLink("Lisää uusi", "Create", "Varastopaikat", new { @class = "btn btn-primary btn-sm" })
</p>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Varastopaikka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(t => t.Varastopaikka))
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Varastopaikka)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.ActionLink("MUOKKAA", "Edit", new { id = item.VarastoID }, new { @class = "btn btn-outline-secondary btn-sm" })&nbsp;
            @*@Html.ActionLink("Yhteenveto", "Details", new { id = item.VarastoID })*@
            @Html.ActionLink("POISTA", "Delete", new { id = item.VarastoID }, new { @class = "btn btn-outline-danger btn-sm" })
        </td>
    </tr>
}

</table>