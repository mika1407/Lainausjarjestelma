@model LainausjarjestelmaMVC.Models.Logins

@{
    ViewBag.Title = "Poista - Login";
}
<br />
<h2>Poista</h2>

<div>
    <h4>Login</h4>
    <hr />
    <h4 class="text-danger">Oletko varma, että haluat poistaa tämän Loginin?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Salasana)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Salasana)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Poista" class="btn btn-outline-danger" />
            <br />
            <br />
            @Html.ActionLink("Takaisin listaan", "Index")
        </div>
    }
</div>
