@model IEnumerable<LainausjarjestelmaMVC.Models.Logins>

@{
    ViewBag.Title = "Loginit";
}

<br />

<h2>Loginit</h2>

<p>
    @Html.ActionLink("Lisää uusi", "Create")
</p>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salasana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salasana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td>
                @Html.ActionLink("Muokkaa", "Edit", new { id = item.LoginID }) |
                @Html.ActionLink("Poista", "Delete", new { id = item.LoginID })
            </td>
        </tr>
    }

</table>